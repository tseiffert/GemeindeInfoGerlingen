{
  "$jason": {
    "head": {
      "title": "NAK Gemeindeinfo Gerlingen-v1",
      "description": "NAK Gemeindeinfo Gerlingen",
      "icon": "https://raw.githubusercontent.com/tseiffert/GemeindeInfoGerlingen/master/NAKLogo.png",
      "offline": "false",
      "styles": {
        "bold": {
          "font": "HelveticaNeue-CondensedBold",
          "size": "15"
        }
      },
      "actions": {
        "$foreground": {
          "type": "$reload"
        },
        "$pull": {
          "type": "$flush",
          "success": {
            "type": "$reload"
          }
        }
      },
      "data": {
        "Termine": [
          {
            "date": "So 5. Jan. 2020",
            "time": "09:30",
            "text": "Gottesdienst zum Jahresbeginn Predigtgrundlage: Galater 5, 1 Sonntags- und Vorsonntagsschule"
          },
          {
            "date": "Do 9. Jan. 2020",
            "time": "20:00",
            "text": "Gottesdienst in Ditzingen Predigtgrundlage: Matthäus 2,9b-11"
          },
          {
            "date": "So 12. Jan. 2020",
            "time": "10:00",
            "text": "Gottesdienst mit Bezirksapostel Ehrich, Übertragung via Satellit aus Albstadt"
          }
        ]
      },
      "templates": {
        "body": {
          "sections": [
            {
              "items": {
                "{{#each Termine}}": {
                  "type": "horizontal",
                  "style": {
                    "padding": "5",
                    "spacing": "5"
                  },
                  "components": [
                    {
                      "type": "label",
                      "class": "label_class",
                      "text": "{{date}}",
                      "style": {
                        "width": "30%"
                      }
                    },
                    {
                      "type": "label",
                      "class": "label_class",
                      "text": "{{time}}",
                      "style": {
                        "width": "20%"
                      }
                    },
                    {
                      "type": "label",
                      "class": "label_class",
                      "text": "{{text}}",
                      "style": {
                        "width": "50%"
                      }
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    }
  }
}
